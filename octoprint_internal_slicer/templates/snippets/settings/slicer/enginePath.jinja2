<div class="control-group" data-bind="css: {error: pathBroken(), success: pathOk()}">
    <label class="control-label" for="settings-internal_slicer-path">{{ _('Path to SlicerEngine') }}</label>
    <div class="controls">
        <div class="input-append">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.internal_slicer.slicer_engine, valueUpdate: 'afterkeydown'">
            <button class="btn" type="button" data-bind="click: testEnginePath, enable: settings.plugins.internal_slicer.slicer_engine(), css: {disabled: !settings.plugins.internal_slicer.slicer_engine()}">{{ _('Test') }}</button>
        </div>
        <span class="help-block" data-bind="visible: pathBroken() || pathOk(), text: pathText"></span>
    </div>
</div>
